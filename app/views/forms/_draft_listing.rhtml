<% pre_text ||= '' -%>
<% update ||= 'yes' -%>
<li class="form_listing<%= ' submitted' if form.has_been_submitted? %>" id="form_listing_<%= form.form_data_id %>"><span><%= pre_text %><%= link_to form.visual_identifier, doctor_forms_url(:form_status => 'draft', :action => 'draft', :form_type => form.form_data_type, :form_id => form.form_data_id) %><span class="action_links">(<%= link_to_remote 'Discard', :confirm => "Discard this form? This cannot be undone.", :url => formatted_doctor_forms_path(:form_status => 'draft', :form_type => form.form_data_type, :action => 'discard', :form_id => form.form_data_id, :format => 'js', :update => update) %>)</span></span></li>
